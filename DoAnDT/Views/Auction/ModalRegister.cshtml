@model  DoAnDT.Models.DangkisanphamModel
<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Đăng kí bán sản phẩm</h4>
            </div>
            @using (Html.BeginForm("RegisterProduct", "Auction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(m=>m.MaSPCM)
                        @Html.Label("Tên sản phẩm", new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.tenSanPham, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(m => m.MaNCC)
                        @Html.Label("Nhà Cung Cấp", new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.tenNhaCC, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Tiền mỗi sản phẩm*(Đồng)", new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.TienmoiSP, new { @class = "form-control", @type = "number", @required = "required" })
                            @Html.ValidationMessageFor(m=>m.TienmoiSP)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Ghi chú", new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(m => m.Ghichu, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
