@{
    ViewBag.Title = "Quản lý thành viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>@ViewBag.Title</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="alert alert-info" id="alert-info" style="display:none"></div>
                <div class="form-inline" style="text-align: right; padding: 10px">

                    <div class="input-group">
                        @Html.DropDownList("Role", (SelectList)@ViewBag.Roleseach, "--- Phân quyền ---", new { @class = "form-control", id = "quyens", onchange = "timkiemkhachhang()" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="sodienthoais" type="text" class="form-control" placeholder="Số điện thoại" oninput="timkiemkhachhang()">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="emails" type="text" class="form-control" placeholder="Email" oninput="timkiemkhachhang()">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="hotens" type="text" class="form-control" placeholder="Họ tên" oninput="timkiemkhachhang()">
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search red"></i></span>
                        <input id="tendangnhaps" type="text" class="form-control" placeholder="Tên đăng nhập" oninput="timkiemkhachhang()">
                    </div>
                

                </div>
                <div class="form-inline" style="text-align: right; padding: 10px">
                    <div class="input-group">
                        @Html.DropDownList("SetRole", (SelectList)@ViewBag.Role, "--- Sửa quyền thành viên ---", new { @class = "form-control", id = "setquyens" })
                        <span class="input-group-addon" onclick="phanquyens('@Url.Action("PhanQuyen", "Account")','')" style="cursor:pointer"><i class="glyphicon glyphicon glyphicon-wrench blue"></i></span>
                    </div>

                    <div class="input-group">
                        <a class="btn btn-success" href='javascript:phanquyens("@Url.Action("PhanQuyen", "Account")","Khách hàng")'>
                            <i class="glyphicon glyphicon-lock icon-white"></i>
                            Hủy khóa
                        </a>
                    </div>

                    <div class="input-group">
                        <a class="btn btn-danger" href='javascript:phanquyens("@Url.Action("PhanQuyen", "Account")","Bị khóa")'>
                            <i class="glyphicon glyphicon-lock icon-white"></i>
                            Khóa tài khoản
                        </a>
                    </div>


                </div>
                <div class="Ajax-Table">
                    @Html.Action("TimUser", "Account")
                </div>

            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
