@{ ViewBag.Title = "EditNCCInfo";
Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml"; }

@model DoAnDT.Models.EditInfo2B2ViewModel



<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row">
            <div id="StatupMessage">
                @if (ViewBag.StatusMessage != null)
                {
    <h5>@ViewBag.StatusMessage</h5>}
            </div>

            @using (Html.BeginForm("EditNCCInfo", "Account", FormMethod.Post))
            {
@Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)
                    <div class="col-md-12">
                        @Html.HiddenFor(model => model.MaNCC)
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenNCC, new { @class = "control-label col-md-3" })
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.TenNCC, new { @class = "le-input" })
                                @Html.ValidationMessageFor(model => model.TenNCC)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SDT_NCC, new { @class = "control-label col-md-3" })
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.SDT_NCC, new { @class = "le-input" })
                                @Html.ValidationMessageFor(model => model.SDT_NCC)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DiaChi, new { @class = "control-label col-md-3" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.DiaChi, new { @class = "le-input" })
                                @Html.ValidationMessageFor(model => model.DiaChi)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-3" })
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.Email, new { @class = "le-input" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Lưu lại" class="le-button huge" />
                            </div>
                        </div>
                    </div>
                </div>            }
        </div>

    </div>
</main>