@{
    ViewBag.Title = "Đăng kí nhà cung cấp";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}

@model DoAnDT.Models.Register2B2ViewModel


<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row">
            <h2 class="bordered">Đăng ký là nhà cung cấp</h2>

            @using (Html.BeginForm("RegisterB2B", "Account", FormMethod.Post, new { @class = "register-form cf-style-1", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <div class="field-row">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "le-input" })
                </div>

                <div class="field-row">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "le-input" })
                </div>
                <div class="field-row">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "le-input" })
                </div>
                
                <div class="field-row">
                    @Html.LabelFor(m => m.TenNCC)
                    @Html.TextBoxFor(m => m.TenNCC, new { @class = "le-input" })
                </div>
                
                <div class="field-row">
                    @Html.LabelFor(m => m.DiaChi)
                    @Html.TextBoxFor(m => m.DiaChi, new { @class = "le-input" })
                </div>
                
                <div class="field-row">
                    @Html.LabelFor(m => m.SDT_NCC)
                    @Html.TextBoxFor(m => m.SDT_NCC, new { @class = "le-input" })
                </div>
                <div class="field-row">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "le-input" })
                </div>
                <div class="buttons-holder">
                    <input type="submit" class="le-button huge" value="Đăng ký" />
                </div>
            }

            <h2 class="semi-bold">Đăng ký để được :</h2>

            <ul class="list-unstyled list-benefits">
                <li><i class="fa fa-check primary-color"></i> Là đối tác cung cấp sản phẩm cho chúng tôi</li>
                <li><i class="fa fa-check primary-color"></i> Hợp tác dài hạn, ổn định</li>
            </ul>


        </div><!-- /.row -->
    </div><!-- /.container -->
</main><!-- /.authentication -->