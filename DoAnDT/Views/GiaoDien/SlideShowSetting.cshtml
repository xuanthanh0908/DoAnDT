@model List<DoAnDT.Models.Link>
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Link</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="center"><img src="@Url.Content("~/images/banners/")@item.Image" width="645" height="150"></td>
                    <td class="center"><a href="@item.Url">@item.Url</a></td>
                    <td class="center">@item.Text</td>
                    <td class="center">
                        <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteLoaiSP", "LoaiSP")","@item.id")'>
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
