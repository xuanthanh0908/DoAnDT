<script>
    $(function () {
        $('#AlertBox').removeClass('hide');
        $('#AlertBox').delay(2000).slideUp(500);
    });
    $('input[name="PaymentStatus"]').off('click').on('click', function () {
        if ($(this).val() == 'NL') {
            $('#NLContent').show()
            $('#bankContent').hide()
        }
        else if ($(this).val() == 'VISA') {
            $('#bankContent').show()
            $('#NLContent').hide()
        } else {
            $('#NLContent').hide()
            $('#bankContent').hide()
        }
    })
</script>