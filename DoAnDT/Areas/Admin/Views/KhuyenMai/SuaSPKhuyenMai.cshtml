                    </div>
                    <div class="input-group">
                        <a class="btn btn-danger" href='javascript:multibledel("@Url.Action("Multible", "KhuyenMai")")'>
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            Xóa khỏi danh sách
                        </a>
                    </div>
                </div>
                <div class="Ajax-Table-1">
                    @Html.Action("DSSanPhamKhuyenMai", "KhuyenMai")
