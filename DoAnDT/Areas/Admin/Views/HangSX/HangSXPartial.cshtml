@using DoAnDT.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<HangSanXuat>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th>@Html.DisplayNameFor(model => model.First().TenHang)</th>
            <th>@Html.DisplayNameFor(model => model.First().TruSoChinh)</th>
            <th>@Html.DisplayNameFor(model => model.First().QuocGia)</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.HangSX" />
                </td>
                <td class="center">@item.TenHang</td>
                <td class="center">@item.TruSoChinh</td>
                <td class="center">@item.QuocGia</td>
                <td class="center">
                    <a class="btn btn-info" href="/Admin/HangSX/EditHangSX/@item.HangSX">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:XoaItem("@Url.Action("DeleteHangSX", "HangSX",new { area = "Admin"})","@item.HangSX")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-6 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimHangSX", "HangSX", new {area = "Admin", key = @ViewBag.key, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="result-counter">
                Có tât cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.pagination-holder -->