@using DoAnDT.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<NhaCungCap>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>Tên Nhà Cung Cấp</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Website</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="center">@item.TenNCC</td>
                <td class="center">@item.DiaChi</td>
                <td class="center">@item.SDT_NCC</td>
                <td class="center">@item.Email</td>
                <td class="center">@item.Website</td>
                <td class="center">
                    <a class="btn btn-success" href="@Url.Action("Laysoluongton", "Home", new {area ="AdminB2B", doiacID = item.MaNCC })">
                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                        Kiểm tra số lượng tồn
                    </a>
                    <a class="btn btn-info" href="@Url.Action("XemXacNhanGiaoHang", "Home", new {area ="AdminB2B", doiTacID = item.MaNCC })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Xác nhận giao hàng
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-holder">
    <div class="row">
        <div class="col-xs-12 col-sm-6 text-left">
            <div id="nav_grid">
                @Html.PagedListPager(Model, page => Url.Action("TimDoiTac", "Home", new { area = "AdminB2B", key = @ViewBag.key, page = page }))
            </div>
        </div>
        <div class="col-xs-12 col-sm-6">
            <div class="result-counter">
                Có tât cả <span>@Model.TotalItemCount</span> dòng
            </div>
        </div>
    </div><!-- /.row -->
</div><!-- /.pagination-holder -->
