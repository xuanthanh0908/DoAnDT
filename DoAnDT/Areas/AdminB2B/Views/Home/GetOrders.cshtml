@model List<DoAnDT.Models.Hopdong>

<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>Mã Hợp Đồng</th>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng tồn của sản phẩm</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++ )
        {
            <tr>
                <td class="center">@Model[i].order_id</td>

                <td class="center">@Model[i].product_id</td>

                <td class="center">@Model[i].product_name</td>

                <td class="center">@Model[i].product_quantity</td>
            </tr>
        }
    </tbody>
</table>

