@model DoAnDT.Models.ConfigAPI
@{
    ViewBag.Title = "ConfigAPI";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2><i class="glyphicon glyphicon-user"></i>@ViewBag.Title</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
                    <a href="#" class="btn btn-minimize btn-round btn-default">
                        <i class="glyphicon glyphicon-chevron-up"></i>
                    </a>
                    <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </div>
            <div class="box-content">

                @using (Html.BeginForm("ConfigAPI", "Home", FormMethod.Post, new {area ="AdminB2B", enctype = "multipart/form-data" }))
                {

                    <div class="form-horizontal">
                        <div class="alert alert-info">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                        </div>
                        <div class="form-group">
                            @Html.HiddenFor(m => m.MaNCC)
                            @Html.Label("Nhập link request token", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LinkRequesrToken, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(m => m.LinkRequesrToken)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Nhập link Access Token", new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LinkAccessToken, new { @class = "form-control news_date", required = "required", id = "news_date" })
                                @Html.ValidationMessageFor(m => m.LinkAccessToken)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Nhập link kiểm tra lượng tồn(Orders)", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LinkKiemTraLuongTon, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(m => m.LinkKiemTraLuongTon)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Nhập link Xác nhận giao hàng", new { @class = "control-label col-md-3", })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.LinkXacNhanGiaoHang, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(m => m.LinkXacNhanGiaoHang)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Finish" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
    </div>
    <!--/span-->
</div><!--/row-->
