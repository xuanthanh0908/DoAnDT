    @Html.Label("Username", new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        <input type="text" class="form-control" name="username" id="username" required />
    </div>
</div>
<div class="form-group">
    @Html.Label("Password", new { @class = "col-md-4 control-label" })
